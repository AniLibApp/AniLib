<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.pranavpandey.android.dynamic.support.widget.DynamicEditText
        android:id="@+id/textInputEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pasteInputIv"
        app:layout_constraintTop_toTopOf="parent" >
        <requestFocus/>
    </com.pranavpandey.android.dynamic.support.widget.DynamicEditText>


    <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
        android:id="@+id/pasteInputIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:adt_colorType="text_primary"
        app:layout_constraintBottom_toBottomOf="@id/textInputEt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textInputEt"
        app:srcCompat="@drawable/ic_paste" />

</androidx.constraintlayout.widget.ConstraintLayout>