<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.revolgenx.anilib.view.MaxHeightFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.pranavpandey.android.dynamic.support.widget.DynamicScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical">

                <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                        android:id="@+id/markdownTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>

            </com.pranavpandey.android.dynamic.support.widget.DynamicScrollView>
        </com.revolgenx.anilib.view.MaxHeightFrameLayout>

        <com.revolgenx.anilib.view.ExpandableTextView
            android:id="@+id/mediaDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="string \n string string \n string string \n string string \n string string \n string string \n string string \n string string \n string string \n string string \n string string \n string " />


        <com.pranavpandey.android.dynamic.support.widget.DynamicButton
            android:id="@+id/openVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.revolgenx.anilib.view.DynamicLoadingImageView
            android:id="@+id/loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite" />

        <com.revolgenx.anilib.view.PlusMinusEditTextLayout
            android:id="@+id/testplusminus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/testImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.jaygoo.widget.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rsb_indicator_show_mode="alwaysShow"
            app:rsb_max="2020"
            app:rsb_min="1950"
            app:rsb_mode="range" />

        <com.revolgenx.anilib.view.MediaListEditorScoreLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/listPrivateButton"
            style="@style/Widget.DynamicApp.Button.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@drawable/ic_dropped" />

        <include layout="@layout/overview_recommendation_presnter_layout" />


        <include layout="@layout/season_presenter_layout" />

        <include layout="@layout/season_presenter_layout" />

        <include layout="@layout/season_presenter_layout" />

        <include layout="@layout/season_presenter_layout" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>