    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.revolgenx.anilib.view.PlusMinusEditTextLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <com.revolgenx.anilib.view.MediaListEditorScoreLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/listPrivateButton"
            style="@style/Widget.DynamicApp.Button.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@drawable/ic_dropped" />

        <include
            layout="@layout/recommendation_card_layout"/>


        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />

        <include layout="@layout/media_list_presenter_layout" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>