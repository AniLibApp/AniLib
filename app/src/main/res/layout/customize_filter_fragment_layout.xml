<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/setting_padding_dimen">

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/add_remove_tag_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_tag"
            app:ads_subtitle="@string/add_remove_tags"
            app:ads_title="@string/tags" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/add_remove_genre_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_genre"
            app:ads_subtitle="@string/add_remove_genre"
            app:ads_title="@string/genre" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/add_remove_streaming_on_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_watch"
            app:ads_subtitle="@string/add_remove_streaming_on"
            app:ads_title="@string/streaming_on" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>