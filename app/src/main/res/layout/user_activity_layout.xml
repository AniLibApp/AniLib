<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout
        android:id="@+id/userAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pranavpandey.android.dynamic.support.widget.DynamicCollapsingToolbarLayout
            android:id="@+id/userCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            app:layout_scrollFlags="scroll|snap|enterAlways|enterAlwaysCollapsed">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageUri="https://s4.anilist.co/file/anilistcdn/user/banner/b89353-Vdpbpjkelxko.jpg"
                app:layout_collapseMode="parallax" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicToolbar
                android:id="@+id/userToolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_collapseMode="pin" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCollapsingToolbarLayout>

    </com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout>

    <com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView
        android:id="@+id/userNestedScrollView"
        style="@style/Widget.DynamicApp.Scroller.Nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-56dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <com.pranavpandey.android.dynamic.support.widget.DynamicRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/userAvatar"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_alignParentBottom="true"
                    app:backgroundImage="@color/white"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/white"
                    app:roundingBorderWidth="3.5dp" />

                <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:background="@drawable/stroke_background"
                    android:padding="6dp"
                    android:text="Follow"
                    android:textSize="16sp"
                    app:fontFamily="@font/qanelassoft_extra_bold" />

            </com.pranavpandey.android.dynamic.support.widget.DynamicRelativeLayout>

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="UserName"
                android:textSize="22sp"
                app:ads_colorType="text_primary_inverse"
                app:fontFamily="@font/qanelassoft_extra_bold" />


            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/socialTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="%s Following  %s Followers"
                android:textSize="12sp"
                app:fontFamily="@font/open_sans_light" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/stroke_background"
                android:orientation="horizontal">

                <com.revolgenx.anilib.view.ImageHeaderLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:headerImage="@drawable/ic_media"
                    app:title="@string/anime_list" />

                <com.revolgenx.anilib.view.ImageHeaderLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:headerImage="@drawable/ic_manga"
                    app:title="@string/manga_list" />

                <com.revolgenx.anilib.view.ImageHeaderLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:headerImage="@drawable/ic_favorite"
                    app:title="@string/favourites" />

                <com.revolgenx.anilib.view.ImageHeaderLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:headerImage="@drawable/ic_chart"
                    app:title="@string/stats" />

            </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>


        </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>
    </com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView>

</com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout>