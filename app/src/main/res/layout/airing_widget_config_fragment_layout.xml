<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/setting_padding_dimen">

        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_include_already_aired"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/include_already_aired" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_is_airing_weekly"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_show_from_watching"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_only_from_your_watching_list" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_show_from_planning"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_only_from_your_planning_list" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_show_eta"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_eta" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
            android:id="@+id/wg_click_open_list_editor"
            style="@style/AlCheckboxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_to_open_list_editor_instead_of_browsing_info" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
            style="@style/SettingHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort" />


        <com.revolgenx.anilib.ui.view.widgets.AlCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <com.revolgenx.anilib.ui.view.sort.AlSortLayout
                    android:id="@+id/wg_airing_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </com.revolgenx.anilib.ui.view.widgets.AlCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>