<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/berlinrounded_extra_bold"
        android:gravity="center"
        android:text="@string/media"
        android:textSize="16sp"
        app:ads_rtlSupport="false"
        android:layout_margin="6dp"/>

    <com.pranavpandey.android.dynamic.support.widget.DynamicRecyclerView
        android:id="@+id/mediaListViewRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <com.pranavpandey.android.dynamic.support.widget.DynamicButton
        android:id="@+id/mediaViewDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:ads_colorType="accent"
        android:text="@string/done"/>

</com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>