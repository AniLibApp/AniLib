<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/browserRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout
        android:id="@+id/mediaBrowserCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/smartTabLayout">

        <com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/mediaBrowserCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:collapsedTitleTextAppearance="@style/CollapsedTitleAppearance"
                app:expandedTitleMarginBottom="100dp"
                app:expandedTitleMarginStart="136dp"
                app:expandedTitleTextAppearance="@style/ExpandedTitleAppearance"
                app:layout_scrollFlags="scroll|snap|enterAlways|enterAlwaysCollapsed"
                app:maxLines="2">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mediaBrowserBannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

                <com.pranavpandey.android.dynamic.support.widget.DynamicRootLayout
                    android:id="@+id/coverImageFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    app:layout_collapseMode="parallax"
                    android:layout_marginBottom="10dp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/mediaBrowserCoverImage"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"
                        android:transitionName="media_cover_transition"
                        app:roundAsCircle="false"
                        app:roundedCornerRadius="4dp" />

                    <LinearLayout
                        android:id="@+id/mediaButtonsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/mediaBrowserCoverImage"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                            android:id="@+id/mediaAddCardView"
                            style="@style/Widget.DynamicApp.Card.Clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:ads_cardElevation="4dp"
                            app:ads_elevationOnSameBackground="true">

                            <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                                android:id="@+id/mediaAddButton"
                                style="@style/Widget.DynamicApp.Button.ImageButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_plus" />
                        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

                        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                            android:id="@+id/mediaReviewView"
                            style="@style/Widget.DynamicApp.Card.Clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:ads_cardElevation="4dp"
                            app:ads_elevationOnSameBackground="true">

                            <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                                android:id="@+id/mediaReviewButton"
                                style="@style/Widget.DynamicApp.Button.ImageButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_review" />

                        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

                        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                            android:id="@+id/mediaFavCardView"
                            style="@style/Widget.DynamicApp.Card.Clickable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:ads_cardCornerRadius="6dp"
                            app:ads_cardElevation="4dp"
                            app:ads_elevationOnSameBackground="true"
                            app:cardCornerRadius="6dp">

                            <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                                android:id="@+id/mediaFavButton"
                                style="@style/Widget.DynamicApp.Button.ImageButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_not_favourite" />
                        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>
                    </LinearLayout>

                </com.pranavpandey.android.dynamic.support.widget.DynamicRootLayout>


                <com.pranavpandey.android.dynamic.support.widget.DynamicToolbar
                    android:id="@+id/mediaBrowserToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="pin" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout>


        <com.pranavpandey.android.dynamic.support.widget.DynamicViewPager
            android:id="@+id/browseMediaViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/smartTabLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout>


    <com.revolgenx.anilib.view.CustomSmartTab
        android:id="@+id/smartTabLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@android:color/transparent"
        app:stl_indicatorInterpolation="linear"
        app:stl_underlineThickness="0dp" />


</RelativeLayout>