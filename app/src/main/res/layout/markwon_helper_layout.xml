<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markdownHelperLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:clipToPadding="false">


        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/pasteIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_paste" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/boldIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_bold" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/italicsIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_italics" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/spoilerIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_dropped" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/linkIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_link" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/imageIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="text_primary"
            app:srcCompat="@drawable/ic_image" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/youtubeIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="none"
            app:srcCompat="@drawable/ic_youtube" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/videoIv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/markdown_helper_icon_dimen"
            app:adt_colorType="tint_accent"
            app:adt_contrastWithColorType="background"
            app:srcCompat="@drawable/ic_play_cirle" />

    </LinearLayout>
</HorizontalScrollView>
