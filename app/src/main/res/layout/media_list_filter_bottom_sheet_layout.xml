<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">

        <FrameLayout
            android:id="@+id/format_add_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.revolgenx.anilib.ui.view.widgets.chip.DynamicChip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/format"
                app:closeIcon="@drawable/ic_add" />
        </FrameLayout>


        <com.pranavpandey.android.dynamic.support.widget.DynamicRecyclerView
            android:id="@+id/formatChipRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/status">
            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.pranavpandey.android.dynamic.support.widget.DynamicSpinner
                    android:id="@+id/listStatusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>

        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/genre">

            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.pranavpandey.android.dynamic.support.widget.DynamicSpinner
                    android:id="@+id/listGenreSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>

        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/sort">

            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.revolgenx.anilib.ui.view.sort.AlSortLayout
                    android:id="@+id/list_sort_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>


    </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>

</androidx.core.widget.NestedScrollView>


