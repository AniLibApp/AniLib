<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp">

        <com.revolgenx.anilib.ui.view.header.CustomDynamicHeader
            android:id="@+id/format_add_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ads_button_remote"
            app:ads_icon="@drawable/ic_add_circle"
            app:ads_title="@string/format"
            app:titleTextSize="14sp" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicRecyclerView
            android:id="@+id/formatChipRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/status">
            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.pranavpandey.android.dynamic.support.widget.DynamicSpinner
                    android:id="@+id/listStatusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>

        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/genre">

            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.pranavpandey.android.dynamic.support.widget.DynamicSpinner
                    android:id="@+id/listGenreSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>

        <com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:headerName="@string/sort">

            <com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.pranavpandey.android.dynamic.support.widget.DynamicSpinner
                    android:id="@+id/listSortSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.revolgenx.anilib.ui.view.widgets.misc.BackgroundStrokeLayout>
        </com.revolgenx.anilib.ui.view.header.DynamicHeaderLinearLayout>


    </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>

</androidx.core.widget.NestedScrollView>


