<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/staff_bottom_nav"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/staff_toolbar"
            layout="@layout/toolbar_layout" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicViewPager
            android:id="@+id/staff_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.pranavpandey.android.dynamic.support.widget.DynamicBottomNavigationView
        android:id="@+id/staff_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:adt_colorType="background"
        app:adt_textColorType="accent"
        app:adt_contrastWithColorType="background"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>