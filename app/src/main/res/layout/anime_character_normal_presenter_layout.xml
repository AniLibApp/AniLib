<?xml version="1.0" encoding="utf-8"?>
<com.revolgenx.anilib.ui.view.widgets.AlCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/media_character_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/media_character_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1.6"
                app:layout_constraintStart_toStartOf="parent" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/media_character_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/media_character_name_text_size"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/media_character_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/media_character_role_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp"
                app:adt_colorType="tint_background"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/media_character_iv"
                app:layout_constraintTop_toBottomOf="@+id/media_character_name_tv" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/media_character_staff_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/media_staff_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1.6"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/media_staff_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:textSize="@dimen/media_character_name_text_size"
                app:adt_rtlSupport="false"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/media_staff_language_tv"
                app:layout_constraintEnd_toStartOf="@+id/media_staff_iv"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/media_staff_language_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp"
                app:adt_colorType="tint_background"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/media_staff_iv"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.revolgenx.anilib.ui.view.widgets.AlCardView>