<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterMediaContainer"
    style="@style/Widget.DynamicApp.Card.Margin.Clickable"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mini_card_dimen">

    <com.pranavpandey.android.dynamic.support.widget.DynamicRelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="6dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/actorImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_image_dimen"
            android:transitionName="character_image_transition"
            app:roundAsCircle="false"
            app:roundedCornerRadius="4dp" />


        <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
            android:id="@+id/actorNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actorImageView"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="10sp"
            app:ads_colorType="tint_surface"
            tools:ignore="SmallSp" />

        <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
            android:id="@+id/actorLanguageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="10sp"
            app:ads_colorType="accent"
            tools:ignore="SmallSp" />

    </com.pranavpandey.android.dynamic.support.widget.DynamicRelativeLayout>
</com.pranavpandey.android.dynamic.support.widget.DynamicCardView>