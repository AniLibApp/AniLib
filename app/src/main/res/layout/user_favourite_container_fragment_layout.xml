<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.revolgenx.anilib.ui.view.widgets.tablayout.AniLibTextPrimaryTabLayout
        android:id="@+id/user_favourite_tab_layout"
        style="@style/DynamicTextTabLayoutStyle.Background"
        app:tabTextAppearance="@style/SubTabTextAppearance" />


    <com.pranavpandey.android.dynamic.support.widget.DynamicViewPager2Layout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/user_favourite_container_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.pranavpandey.android.dynamic.support.widget.DynamicViewPager2Layout>

</LinearLayout>