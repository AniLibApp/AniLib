<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <com.pranavpandey.android.dynamic.support.widget.DynamicCheckBox
        android:id="@+id/ml_language_check_box"
        style="@style/AlCheckboxStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:adt_stateNormalColorType="text_primary"
        android:padding="10dp"
        android:clickable="false"
        android:textSize="15sp" />

    <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
        android:id="@+id/download_delete_ml_model"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6dp"
        android:src="@drawable/ads_ic_download"
        app:adt_colorType="text_primary" />

</LinearLayout>