<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listEditorRootLayout">


    <com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/listEditorCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextAppearance="@style/TextAppearance.DynamicApp.Toolbar"
            app:expandedTitleMarginStart="132dp"
            app:expandedTitleTextAppearance="@style/ExpandedTitleAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:maxLines="2">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/listEditorBannerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicToolbar
                android:id="@+id/listEditorToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout>

    <com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView
        style="@style/Widget.DynamicApp.Scroller.Padding.Vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listEditorNestedScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/listResourceEditorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


                <include
                    layout="@layout/loading_layout"
                    android:visibility="gone"/>

                <include
                    layout="@layout/error_layout"
                    android:visibility="gone"/>

            </FrameLayout>

            <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
                android:id="@+id/listEditorContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">

                <include layout="@layout/media_list_presenter_layout" />
                <include layout="@layout/media_list_presenter_layout" />
                <include layout="@layout/media_list_presenter_layout" />
                <include layout="@layout/media_list_presenter_layout" />
                <include layout="@layout/media_list_presenter_layout" />


            </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>
        </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>
    </com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView>

    <RelativeLayout
        android:id="@+id/coverImageFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_anchor="@id/appbarLayout"
        app:layout_anchorGravity="bottom"
        app:layout_behavior=".view.SimpleDraweeFrameLayoutBehavior">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listEditorCoverImage"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:transitionName="media_cover_transition" />

        <LinearLayout
            android:id="@+id/listEditorButtonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/listEditorCoverImage"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp">

            <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                android:id="@+id/listSaveCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:ads_cardElevation="4dp"
                style="@style/Widget.DynamicApp.Card.Clickable"
                app:ads_elevationOnSameBackground="true">

                <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                    android:id="@+id/listSaveImageButton"
                    style="@style/Widget.DynamicApp.Button.ImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_save" />
            </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

            <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                android:id="@+id/listDeleteCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:ads_cardElevation="4dp"
                style="@style/Widget.DynamicApp.Card.Clickable"
                app:ads_elevationOnSameBackground="true">

                <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                    android:id="@+id/listDeleteButton"
                    style="@style/Widget.DynamicApp.Button.ImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delete" />
            </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

            <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
                android:id="@+id/listFavCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:ads_cardElevation="4dp"
                app:ads_cardCornerRadius="6dp"
                app:cardCornerRadius="6dp"
                style="@style/Widget.DynamicApp.Card.Clickable"
                app:ads_elevationOnSameBackground="true">

                <com.pranavpandey.android.dynamic.support.widget.DynamicImageButton
                    android:id="@+id/listFabImageButton"
                    style="@style/Widget.DynamicApp.Button.ImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_not_favourite" />
            </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>
        </LinearLayout>

    </RelativeLayout>

</com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout>