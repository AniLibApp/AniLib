<?xml version="1.0" encoding="utf-8"?>

<com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mediaRecommendationRootLayout"
    android:layout_width="180dp"
    android:layout_height="340dp">

    <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
        android:id="@+id/mediaRecommendationCardView"
        style="@style/Widget.DynamicApp.Card.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="216dp">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/recommendationCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/black" />

                <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                    android:id="@+id/mediaRatingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="5dp"
                    android:background="@drawable/rating_background"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:ads_colorType="custom"
                    app:drawableStartCompat="@drawable/ic_star" />

            </FrameLayout>

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/mediaRecommendationTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="10dp"
                android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssss"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>
    </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>


    <com.pranavpandey.android.dynamic.support.widget.DynamicCardView
        style="@style/Widget.DynamicApp.Card"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:ads_colorType="primary_dark"
        app:layout_anchor="@id/mediaRecommendationCardView"
        app:layout_anchorGravity="bottom">

        <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mediaRecommendationLikeTv"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_thumb_up" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mediaRecommendationDislikeTv"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_thumb_down" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/mediaRecommendationRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="+ 1"
                android:textColor="@color/white" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>

    </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

</com.pranavpandey.android.dynamic.support.widget.DynamicCoordinatorLayout>