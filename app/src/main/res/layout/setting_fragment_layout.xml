<?xml version="1.0" encoding="utf-8"?>

<com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DynamicApp.Scroller.Padding.Vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView style="@style/Widget.DynamicApp.Card">

            <com.pranavpandey.android.dynamic.support.view.DynamicItemView
                android:id="@+id/themeItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ads_colorType="tint_surface"
                app:ads_icon="@drawable/ads_ic_style"
                app:ads_subtitle="@string/dynamically_apply_theme"
                app:ads_title="@string/ads_dynamic_theme" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView style="@style/Widget.DynamicApp.Card">

            <com.pranavpandey.android.dynamic.support.view.DynamicItemView
                android:id="@+id/notificationSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ads_colorType="tint_surface"
                app:ads_icon="@drawable/ic_notifications"
                app:ads_subtitle="@string/notification_setting_sub"
                app:ads_title="@string/notification" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>


        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView style="@style/Widget.DynamicApp.Card">

            <com.pranavpandey.android.dynamic.support.setting.DynamicSpinnerPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ads_description="@string/preferred_media_title"
                app:ads_entries="@array/media_title_entries"
                app:ads_icon="@drawable/ic_title"
                app:ads_key="title_key"
                app:ads_title="@string/media_title"
                app:ads_value="0"
                app:ads_values="@array/media_title_values" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>


        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView style="@style/Widget.DynamicApp.Card">

            <com.pranavpandey.android.dynamic.support.setting.DynamicSpinnerPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ads_description="@string/preferred_image_quality_desc"
                app:ads_entries="@array/image_entries"
                app:ads_icon="@drawable/ic_image"
                app:ads_key="image_quality_key"
                app:ads_title="@string/cover_image_quality"
                app:ads_value="0"
                app:ads_values="@array/image_values" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>

        <com.pranavpandey.android.dynamic.support.widget.DynamicCardView style="@style/Widget.DynamicApp.Card">

            <com.pranavpandey.android.dynamic.support.view.DynamicItemView
                android:id="@+id/aboutItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ads_colorType="tint_surface"
                app:ads_icon="@drawable/ads_ic_info"
                app:ads_title="@string/about" />

        </com.pranavpandey.android.dynamic.support.widget.DynamicCardView>
    </LinearLayout>
</com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView>