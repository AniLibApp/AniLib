<?xml version="1.0" encoding="utf-8"?>

<com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DynamicApp.Scroller.Padding.Vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/application_setting_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_app_setting"
            app:ads_title="@string/application" />


        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/media_setting_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_api_setting"
            app:ads_title="@string/anilist_and_manga" />


        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/list_setting_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_media_list"
            app:ads_title="@string/list" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/notificationSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_notification_filled"
            app:ads_title="@string/notification" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/filter_Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ic_filter"
            app:ads_title="@string/filter" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/widget_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ads_ic_widgets"
            app:ads_title="@string/widget" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/translation_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ads_ic_translate"
            app:ads_title="@string/translation_setting" />

        <com.revolgenx.anilib.ui.view.widgets.AniLibItemView
            android:id="@+id/aboutItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:ads_colorType="text_primary"
            app:ads_icon="@drawable/ads_ic_info"
            app:ads_title="@string/about_anilib"
            android:visibility="gone"/>



    </com.pranavpandey.android.dynamic.support.widget.DynamicLinearLayout>
</com.pranavpandey.android.dynamic.support.widget.DynamicNestedScrollView>