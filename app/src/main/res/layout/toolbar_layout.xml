<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    app:ads_backgroundAware="disable"
    app:ads_contrastWithColorType="none"
    app:ads_windowInsets="false">

    <com.pranavpandey.android.dynamic.support.widget.DynamicToolbar
        android:id="@+id/dynamicToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="enterAlways|scroll"
        app:subtitleTextAppearance="@style/DynamicToolbarSubTitleTheme"
        app:titleTextAppearance="@style/DynamicToolbarTitleTheme" />

</com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout>