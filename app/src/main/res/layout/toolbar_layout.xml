<?xml version="1.0" encoding="utf-8"?>
<com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <com.pranavpandey.android.dynamic.support.widget.DynamicToolbar
        android:id="@+id/dynamicToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:titleTextAppearance="@style/DynamicToolbarTitleTheme"
        app:subtitleTextAppearance="@style/DynamicToolbarSubTitleTheme"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="enterAlways|scroll" />
</com.pranavpandey.android.dynamic.support.widget.DynamicAppBarLayout>